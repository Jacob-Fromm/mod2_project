<% if flash[:message] %>
  <% flash[:message].each do |m| %>
    <p class='text-white'> <%= m %> </p>
  <% end %>
<% end %>
<ul>
  <%= form_for @user do |f| %>
    <li> <%= f.label :name, nil, class:'text-white mt-2 mb-2' %>
    <%= f.text_field :name, :value => flash[:name], class: "input-group border-white width-50 mt-2 mb-2" %> </li>
    <li> <%= f.label :email, nil, class:'text-white mt-2 mb-2'%>
    <%= f.text_field :email, :value => flash[:email], class: "input-group border-white width-50 mt-2 mb-2" %> </li>
    <li> <%= f.label :password, nil, class:'text-white mt-2 mb-2' %>
    <%= f.password_field :password, class: "input-group border-white width-50 mt-2 mb-2" %> </li>
    <li> <%= f.label :password_confirmation, nil, class:'text-white mt-2 mb-2' %>
    <%= f.password_field :password_confirmation, class: "input-group border-white width-50 mt-2 mb-2" %> </li>
    <li> <%= f.submit class: "btn btn-primary border-white mt-4 mb-3"%> </li>
  <% end %>
</ul>