
<h2 >NPS Park Index</h2> 


<h4>Search for a Park</h4>
<p class="search_index"><%= form_tag parks_path, :method => 'get' do%>

<%= search_field_tag :search, params[:search]%>
<%= submit_tag("Search", :park_name => nil)%>
<%end%>
</p> 




<ul class="list_column pt2">
    <% @parks.each do |park|%>
        <li><%= link_to park.park_name, park_path(park.id)%></li>
    <%end%>
</ul>

