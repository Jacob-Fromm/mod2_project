
<h2><%= @park_api["fullName"]%></h2>
<a href=<%= @park_api["url"]%>><%=@park_api["fullName"] %> Website</a>
<br>
<img class="img-fluid stretch float-right" src=<%= @park_api["images"][0]["url"]%> alt=<%= @park_api["images"][0]["altText"]%>>

<%= link_to "Book a trip to #{@park_api["fullName"]}", new_trip_path(@park_to_trip) %></h2>


<% if @park_api["operatingHours"][0]["exceptions"][0] %>
    <h2>Hours of Operation</h2>
    <p><%=  @park_api["operatingHours"][0]["exceptions"][0]["name"] %></p>
    <p>As of: <%= @park_api["operatingHours"][0]["exceptions"][0]["startDate"] %></p>
    <% @park_api["operatingHours"][0]["exceptions"][0]["exceptionHours"].each do |day, hours| %>
    <p><%= "#{day.capitalize}: #{hours}" %></p> 
    <% end %>
    <p>Typical operating hours: <%= @park_api["operatingHours"][0]["description"] %></p>
<% else %>
    <h2>Hours of Operation</h2>
    <p> <%= @park_api["operatingHours"][0]["description"] %></p>
<% end %>

<h3> Recent or Upcoming Events </h3>
<ul>
<li><%= @park.get_events%></li>
</ul>

<h3> Campgrounds </h3>
<ul>
<% @park.get_campgrounds.each do |cg|%>
<li> <%= cg %></li>
<%end%>
</ul>

<h3> Activities at Park </h3>
<ul>
<% @park.get_thingstodo.each do |act|%>
<li> <%= act%></li>
<%end%>
</ul>


<h2>Weather Info</h2>
<%= @park_api["weatherInfo"] %>

<h2>Alerts</h2>
<% @park_alerts.each do |alert| %>
    <ul>
        <li><a href=<%= alert["url"]%>><%= alert["title"] %></a></li>
    </ul>
<% end %>

<h2>Fees</h2>
<% @park_api["entranceFees"].each do |fee|%>
   <ul>
        <li><%= fee["title"] %></li>
        <ul>
            <li>$<%= fee["cost"] %></li>
        </ul>
   </ul> 
<% end %>

<h2>Passes</h2>
<% @park_api["entrancePasses"].each do |fee|%>
   <ul>
        <li><%= fee["title"] %></li>
        <ul>
            <li>$<%= fee["cost"] %></li>
        </ul>
   </ul> 
<% end %>

<h2>News Releases</h2>
<% @park_news.each do |news| %>
    <h3><a href=<%= news["url"]%>><%= news["title"] %></a></h3>
    <p><%= news["abstract"] %></p>
    <img class="small_img fluid-img" src=<%= news["image"]["url"]%> alt=<%= news["image"]["altText"]%>>
<% end %>

<h2>Amenities</h2>
<% @park_amenities.each do |amen| %>
    <ul>
        <li><%= amen[0]["name"] %></li>
    </ul>
<% end %>
<a href=<%= @park_api["url"] %>>See park website for more details.</a>






